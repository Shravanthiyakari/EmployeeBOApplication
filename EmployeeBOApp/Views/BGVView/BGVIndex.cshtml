@model IEnumerable<TicketingTable>
@{
    ViewData["Title"] = "BGV Tickets";
    var userRole = User.IsInRole("HR") ? "HR" : (User.IsInRole("PM") ? "PM" : "");
    var statusFilter = ViewData["StatusFilter"]?.ToString() ?? "All";
}

<h2 class="mb-4">View Requests</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <label for="searchQuery" class="form-label">Search:</label>
        <input type="text" id="searchQuery" class="form-control"
               placeholder="Search by Emp Id, Emp Name, BGV Id"
               value="@ViewData["SearchQuery"]" onkeyup="liveSearch()" />
    </div>

    <div class="col-md-3">
        <label for="statusFilter" class="form-label">Status:</label>
        <select id="statusFilter" class="form-select" onchange="liveSearch()">
            <option value="All" selected="@(statusFilter == "All")">All</option>
            <option value="Open" selected="@(statusFilter == "Open")">Open</option>
            <option value="Closed" selected="@(statusFilter == "Closed")">Closed</option>
        </select>
    </div>

    <div class="col-md-3">
        <button onclick="exportToExcel()" class="btn btn-success mt-4 w-100">Export to Excel</button>
    </div>

</div>

<div id="requestsTableContainer">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Emp ID</th>
                <th>Emp Name</th>
                <th>BGV ID</th>
                <th>Expiration Date</th>
                @if (userRole == "HR")
                {
                    <th>Edit</th>
                    <th>Submit</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                var emp = ticket.Emp;
                bool isClosed = ticket.Status == "Closed";
                string ticketId = ticket.TicketingId.ToString();

                <tr id="row_@ticketId">
                    <form id="form_@ticketId" asp-controller="BGVView" asp-action="SubmitTicket" method="post" onsubmit="submitTicket(event, '@ticketId')">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@ticketId" />

                    <td>
                        <input type="text" id="empIdInput_@ticketId" name="empId" value="@emp?.EmpId" class="form-control text-center" readonly />
                    </td>
                    <td>
                        <input type="text" id="empNameInput_@ticketId" name="empName" value="@emp?.EmpName" class="form-control text-center" readonly />
                    </td>
                    <td>
                        <input type="text" id="bgvInput_@ticketId" name="bgvId" value="@emp?.BgvMap?.BGVId" class="form-control text-center" readonly />
                    </td>
                    <td>
                        @{
                            var datePlusOneYear = emp?.BgvMap?.Date.AddYears(1).ToString("yyyy-MM-dd") ?? "";
                        }
                        <input type="text" class="form-control text-center" value="@datePlusOneYear" readonly />
                    </td>
                    @if (userRole == "HR")
                    {
                        <td>
                            <button type="button" id="editBtn_@ticketId" class="btn btn-primary"
                                    onclick="enableEdit('@ticketId')" @(isClosed ? "disabled" : "")>
                                Edit
                            </button>
                        </td>
                        <td>
                            <button type="submit" id="submitBtn_@ticketId" class="btn btn-success"
                                    @(isClosed ? "disabled" : "disabled")>
                                Submit
                            </button>
                        </td>
                    }
                    </form>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function liveSearch() {
            var query = $("#searchQuery").val();
            var status = $("#statusFilter").val();

            $("#exportSearchQuery").val(query);
            $("#exportStatusFilter").val(status);

            $.ajax({
                url: '@Url.Action("BGVIndex", "BGVView")',
                type: 'GET',
                data: { searchQuery: query, statusFilter: status, page: 1 },
                success: function (result) {
                    var newHtml = $(result).find('#requestsTableContainer').html();
                    $('#requestsTableContainer').html(newHtml);
                    $('.pagination').html($(result).find('.pagination').html());
                }
            });
        }
                function exportToExcel() {
            const query = $("#searchQuery").val();
            const status = $("#statusFilter").val();

            // Create a form dynamically
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ExportToExcel", "BGVView")';

            // Add Anti-Forgery token
            const token = $('input[name="__RequestVerificationToken"]').first().val();
            if (token) {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);
            }

            // Add hidden fields
            const queryInput = document.createElement('input');
            queryInput.type = 'hidden';
            queryInput.name = 'searchQuery';
            queryInput.value = query;
            form.appendChild(queryInput);

            const statusInput = document.createElement('input');
            statusInput.type = 'hidden';
            statusInput.name = 'statusFilter';
            statusInput.value = status;
            form.appendChild(statusInput);

            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }

       
    </script>
    <script src="~/js/BGV.js" asp-append-version="true"></script>
}
