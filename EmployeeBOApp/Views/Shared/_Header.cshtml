@{
    var userName = Context.Session.GetString("UserName"); // Getting the username from session
}

<nav class="navbar navbar-expand-lg custom-navbar">
    <div class="container-fluid d-flex justify-content-between align-items-center">

        <div class="d-flex align-items-center">
            <a class="navbar-brand me-3" href="#">
                <img src="@Url.Content("~/image/CentifiLogo.jpg")" alt="Logo" width="70" height="45" class="d-inline-block align-text-top">
            </a>
            <span class="me-3 fw-bold">CENTIFIC</span>
            <span class="fw-bold">DASHBOARD</span>
        </div>

        <div class="d-flex align-items-center gap-3">
            <!-- User Profile -->
            <div class="d-flex align-items-center">
                <img src="@Url.Content("~/image/profile.jpg")" alt="Profile" width="32" height="32" class="rounded-circle me-2">
                @if (!string.IsNullOrEmpty(userName))
                {
                    <span class="fw-bold">@userName</span>
                }
            </div>

            <!-- Logout -->
            <div>
                <form id="logout_form" method="post" asp-controller="Login" asp-action="Logout" class="d-none">
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Logout" />
                </form>
                <a href="javascript:void(0);" onclick="document.getElementById('logout_form').submit();"
                   class="logout-link text-decoration-none btn btn-danger text-white px-3">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </div>
</nav>
